{
  "name": "not.e",
  "version": "1.0.0",
  "description": "Enterprise-level note-taking app with Electron + SvelteKit + shadcn/ui",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:svelte\" \"bun run dev:electron\"",
    "dev:svelte": "vite dev",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "bun run build:svelte && bun run build:electron",
    "build:svelte": "vite build",
    "build:electron": "tsc --project tsconfig.electron.json",
    "preview": "vite preview",
    "package": "bun run build && electron-builder",
    "package:dir": "bun run build && electron-builder --dir",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "sveltekit",
    "shadcn",
    "typescript",
    "notes"
  ],
  "author": "yish0",
  "license": "MIT",
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.2",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "@types/bun": "latest",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.32",
    "prettier": "^3.2.4",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^5.0.0",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "bits-ui": "^0.21.0",
    "clsx": "^2.1.0",
    "lucide-svelte": "^0.303.0",
    "tailwind-merge": "^2.2.0",
    "tailwind-variants": "^0.1.20"
  },
  "build": {
    "appId": "com.yish0.note",
    "productName": "not.e",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "build/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
